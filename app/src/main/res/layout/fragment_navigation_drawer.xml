<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    tools:context="com.wifindus.meshclient.NavigationDrawerFragment">

    <RelativeLayout

        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#35A8E0">

        <com.wifindus.meshclient.RoundedImageView
             android:id="@+id/imageView_round"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_marginTop="15dp"
             android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="5dp"
            />


        <ImageView
            android:id="@+id/wfu_logo_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/take_photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="120dp"/>


            <TextView
                android:id="@+id/organisation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organisation Name"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginLeft="130dp"/>




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:layout_marginTop="95dp"



            >


            <ImageView
                android:id="@+id/expand_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"

                android:src="@drawable/expand_profile"
                />

            </RelativeLayout>




<!--
         <ImageView
             android:id="@+id/wfu_logo_image"
             android:layout_width="180dp"
             android:layout_height="180dp"
             android:src="@drawable/logo" /> -->

    </RelativeLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/containerDrawerImage">

        <ListView
            android:id="@+id/add_journalentry_menuitem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"/>
        <ListView
            android:id="@+id/list_journal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </LinearLayout>



